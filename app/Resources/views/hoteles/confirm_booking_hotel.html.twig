{% extends 'index.html.twig' %}
{% block body %}
    <!-- *********************************************************************************************************
                                                Barra de navegación
    **************************************************************************************************************-->
  {%block navegacion%}

     {{ parent()}}
     
     
        {%endblock%} 
    <!-- *********************************************************************************************************
                                                INFORMACION DE RESERVA DEL AUTO DE RENTA
    **************************************************************************************************************-->
    <div class="container my-5">
        <p class="text-right">Paso 3: Verificar datos de reserva</p>
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated bg-warning" role="progressbar"
                aria-valuenow="" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
            </div>
        </div>
    </div>

    <div class="container">
        <div class="row row-cols-sm-1 row-col-md-3">
            <!-- INFORMACION DEL CLIENTE -->
            <div id="" class="col-sm-12 col-md-4">
                <div class="container bg-light py-4 my-5 shadow">
                    <h2 class="h4 mb-4">Informaci&oacute;n del cliente</h2>
                    <div class="container-fluid border-bottom mb-3">
                        <div class="row row-cols-2">
                            <h6 class="text-muted">Nombre</h6>
                            <h6 class="text-muted">Apellido</h6>

                            <span class="small" id="nombre-cliente">{{reserva.getNombre}}</span>
                            <span class="small" id="apellido-cliente">{{reserva.getApellido}}</span>
                        </div>
                    </div>
                    <div class="container-fluid border-bottom mb-3">
                        <div class="row row-cols-1">
                            <h6 class="text-muted">Email</h6>
                            <span id="email-cliente" class="small">{{reserva.getCorreo}}</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- INFORMACION DE LA RESERVA DEL HOTEL -->
            <div id="" class="col-sm-12 col-md-4">
                <div class="container bg-light py-4 my-5 shadow">
                    <h2 class="h4 mb-4">Informaci&oacute;n de la reserva</h2>
                    <div class="container-fluid border-bottom mb-3">
                        <div class="row row-cols-2 mb-3 border-bottom">
                            <h6 class="text-muted">Check-in</h6>
                            <h6 class="text-muted">Check-out</h6>

                            <span class="small" id="fecha-recogida">{{reserva.getFechaEntrada|date('d M y')}}</span>
                            <span class="small" id="hora-recogida">{{reserva.getFechaSalida|date('d M y')}}</span>
                        </div>
                        <div class="row row-cols-2 mt-2">
                            <h6 class="text-muted">Habtaciones</h6>
                            <h6 class="text-muted">Adultos</h6>

                            <span class="small" id="fecha-entrega">{{habitaciones}}</span>
                            <span class="small" id="hora-entrega">{{reserva.getAdultos}}</span>
                        </div>
                        <div class="row row-cols-2 mt-2">
                            <h6 class="text-muted">Niños</h6>
                            <h6 class="text-muted">Infantes</h6>

                            <span class="small" id="fecha-entrega">{{reserva.getNinos}}</span>
                            <span class="small" id="hora-entrega">{{reserva.getInfantes}}</span>
                        </div>
                    </div>
                    <div class="container-fluid border-bottom mb-3">
                        <div class="row row-cols-2">
                            <h6 class="text-muted">Per&iacute;odo de reserva</h6>
                            <h6 class="text-muted">Categor&iacute;a habitaci&oacute;n</h6>
                            {% set diferencia = reserva.getFechaEntrada.diff(reserva.getFechaSalida)%}
                            {% set dias = diferencia.days %}
                            <span id="periodo-renta" class="small">{{dias}} d&iacute;as</span>
                            <span id="categoria-auto" class="small">{{hotel.getTipoHab[0].getTipo}}</span>
                        </div>
                    </div>
                    <div class="container-fluid border-bottom mb-3">
                        <div class="row row-cols-1">
                            <h6 class="text-muted">Hotel</h6>
                            <span id="car-name" class="small">{{hotel.getNombre}}</span>
                        </div>
                    </div>
                    <div class="container-fluid">
                        <div class="row row-cols-1">
                            <img src="{{asset(hotel.getFotos[0].getUrl)}}" alt="" class="img-fluid rounded">
                        </div>
                    </div>
                </div>
            </div>

            <!-- INFORMACION DE PAGO -->
            <div id="" class="col-sm-12 col-md-4">
                <div class="container bg-light py-4 my-5 shadow">
                    <h2 class="h4 mb-4">Informaci&oacute;n de pago</h2>
                    <div class="container-fluid mb-3">
                        <div class="row row-cols-1">
                            <table class="table table-striped table-light table-hover shadow-sm">
                                <thead>
                                    <tr>
                                        <th>Descripci&oacute;n</th>
                                        <th>Debes pagar</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {%if triple > 0%}
                                    <tr>
                                        <td>Habitaci&oacute;n</td>
                                        <td>{{triple}} USD / noche</td>
                                    </tr>
                                    {% endif %}

                                     {%if doble > 0%}
                                    <tr>
                                        <td>Habitaci&oacute;n</td>
                                        <td>{{doble}} USD / noche</td>
                                    </tr>
                                    {% endif %}

                                     {%if  sencilla > 0%}
                                    <tr>
                                        <td>Habitaci&oacute;n</td>
                                        <td>{{sencilla}} USD / noche</td>
                                    </tr>
                                    {% endif %}

                                     {%if vista  > 0%}
                                    <tr>
                                        <td>Habitaci&oacute;n</td>
                                        <td>{{vista}} USD / noche</td>
                                    </tr>
                                    {% endif %}

                                     {%if  junior > 0%}
                                    <tr>
                                        <td>Habitaci&oacute;n</td>
                                        <td>{{junior}} USD / noche</td>
                                    </tr>
                                    {% endif %}

                                     {%if suite > 0%}
                                    <tr>
                                        <td>Habitaci&oacute;n</td>
                                        <td>{{suite}} USD / noche</td>
                                    </tr>
                                    {% endif %}

                                     {%if deluxe > 0%}
                                    <tr>
                                        <td>Habitaci&oacute;n</td>
                                        <td>{{deluxe}} USD / noche</td>
                                    </tr>
                                    {% endif %}

                                     {%if grandDeluxe > 0%}
                                    <tr>
                                        <td>Habitaci&oacute;n</td>
                                        <td>{{grandDeluxe}} USD / noche</td>
                                    </tr>
                                    {% endif %}

                                    
                                    <tr>
                                        <td>Suplemento</td>
                                        <td>0 USD</td>
                                    </tr>
                                    <tr>
                                        <td>Cantidad de noches</td>
                                        <td>{{dias}}</td>
                                    </tr>
                                    <tr>
                                        <td>Descuento</td>
                                        <td>$0 USD</td>
                                    </tr>
                                    <tr>
                                        <th>Total:</th>
                                        <td>{{precio}}</td>
                                    </tr>
                                </tbody>
                            </table>
                            <small class="text-muted small">
                                El valor total es el valor subtotal por la cantidad de d&iacute;as de renta
                            </small>
                          
                            {{ form_start(form) }}
                            {{ form_errors(form) }}
                            {{form_widget(form.save,{attr:{'class':'btn btn-block my-2' } })}}
                            {{ form_row(form._token) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <!-- *********************************************************************************************************
                                            SECCIÓN DEL FOOTER
    **************************************************************************************************************-->
     {%block pie%}

     {{ parent()}}
     
     
        {%endblock%} 
    
{% endblock %}
{% block javascripts %}
  {{ parent()}}
  <script src="{{asset('assets/js/validate-form.js')}}"></script>
{% endblock %}