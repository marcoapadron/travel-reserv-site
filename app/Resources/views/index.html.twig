    <!-- *********************************************************************************************************
                                                SECCIÓN DE HOTELES RECOMENDADOS (PRIMERA SECCIÓN)
    **************************************************************************************************************-->
    <section id="hoteles-recomendados">
        <h2 class="title animate__animated animate__backInDown">HOTELES RECOMENDADOS</h2>
        <div class="container animate__animated animate__slideInLeft">
            <div class="row row-cols-sm-1  row-cols-lg-3">
                {%for hotel in hoteles %} 
               {% if  loop.index <= 6 %}
                <div class="col-sm-12 col-md-6 col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-header">
                            {{hotel.getNombre}}
                        </div>
                        {% set url = " " %}
                        {% for foto in hotel.getFotos %}
                            {% if  loop.index ==1 %}
                            {% set url = foto.getUrl%}
                            {% endif %}
                         {%endfor%}
                        <a href="{{path('hotel-reserva',{'id':hotel.getid})}}"><img src="{{asset(url)}}" alt="..." class="card-img-top"></a>
                                
                    {% set capacidad = 0 %}
                    {% set precio =0 %}
                    {%for hab in hotel.getTipoHab %}
                        {% set capacidad = capacidad + hab.getDisponibilidad%}
                    {%endfor%}
                    {% for tem in hotel.getTemporadas %}       
                        {% if  loop.index ==1 %}
                        {% set precio = tem.getDoble +(3*tem.getDoble/100) %}
                        {% endif %}
                    {%endfor%}
                        <div class="card-body">
                            <h5 class="card-title">
                                {%for i in 1..hotel.getCategoria%}
                                    <i class="fas fa-star"></i>
                                {%endfor%}
                            </h5>
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item"><i class="fas fa-map-marked"></i>{{hotel.getRegion}}</li>
                                <li class="list-group-item"><i class="fas fa-bed"></i> {{capacidad}} habitaciones </li>
                                <li class="list-group-item"><i class="fas fa-wifi"></i> Wifi inclu&iacute;do</li>
                            </ul>
                        </div>
                        <div class="card-footer">
                            <a role="button" href="{{path('hotel-reserva',{'id':hotel.getid})}}" class="btn">Ver hotel</a>
                            <span class="precio">Desde USD ${{precio}}</span>
                        </div>
                    </div>
                </div>
                  {%endif%}
               {% endfor %}
            </div>
            <a href="{{path('hoteles')}}" class="btn btn-outline-info btn-block">Ver hoteles</a>
        </div>
    </section>

    <!-- *********************************************************************************************************
                                                VENTANA CON VISTA AL MAR
    **************************************************************************************************************-->
    <div class="ventana-playa parallax my-4">

    </div>

    <!-- *********************************************************************************************************
                                                SECCIÓN DE AUTOS RECOMENDADOS
    **************************************************************************************************************-->
    {%block cars%}
